<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TempoTrack.Views.Onboarding.OnboardingEteppes" 
             xmlns:skia="clr- namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             NavigationPage.HasNavigationBar="False" BackgroundColor="#2D2D2D"
             >
    <ContentPage.Content>
        <StackLayout Spacing="0" Padding="16,50,16,16">
            <Label Text="Virtueële Etappes" Font="24" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White" />
            <Image x:Name="imgLogo" VerticalOptions="CenterAndExpand" HeightRequest="144" />
            <Label Text="Creëer jouw eigen Tour De France op de wielerpiste in Brugge" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                <skia:SKCanvasView PaintSurface="OnCanvasViewPaintSurface" />
            </StackLayout>

            <Button x:Name="btnContinue" Text="Continue" BackgroundColor="#016FB7" CornerRadius="20" TextColor="#FFFFFF" Margin="180,8,8,8" WidthRequest="150" HeightRequest="40" Padding="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>